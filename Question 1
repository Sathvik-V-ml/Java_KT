class book{
        String title;
        String author;
        float price;

        book(String title,String author,float price){
                this.title=title;
                this.author=author;
                this.price=price;
        }
        public void displayDetails(){
        System.out.println("Title of the book:"+title);
        System.out.println("Author of the book:"+author);
        System.out.println("Book price:"+price);

        }
        public static void main(String []args){
                book book_obj1 = new book("Harry Potter and the goblet of fire","J.K Rowling",599);
                book book_obj2 = new book("The Silent Patient","Alex Michaelides",399);
                book_obj1.displayDetails();
                System.out.println("------------------------");
                book_obj2.displayDetails();
        }
}
